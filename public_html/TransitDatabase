CREATE DATABASE Transit;
USE Transit;


CREATE TABLE transit_user(
	PhoneNumber int not null,
	Name char(40) not null,
	Address char(40) not null,
	Username char(40) not null,
	Password char(40) not null,
	PRIMARY KEY(Name, PhoneNumber)
);
